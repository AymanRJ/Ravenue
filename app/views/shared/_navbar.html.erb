      </li>
    <% else %>
      <li class="nav-item">
       <%= link_to new_user_session_path, class:"mx-2" do %>
       <i class="far fa-user mx-2"> <span class="nav-link-login "> Login </span></i>
    <% end %>
      </li>
    <% end %>
  </ul>
</div>
</div>
