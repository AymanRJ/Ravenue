<div class="container form-container-2 mt-5 text-center">

<h2>SIGN UP</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  <div class="row">
  <div class="col-md-6">
    <%= f.input :first_name,
                required: true,
                autofocus: true,
                wrapper_html: { class: 'input-wrapper' },

                input_html: { class: "input-blue-border", autocomplete: "first-name" } %>
    <%= f.input :last_name,
                required: true,
                wrapper_html: { class: 'input-wrapper' },
                input_html: { class: "input-blue-border", autocomplete: "last-name" } %>
    <%= f.input :email,
                required: true,
                wrapper_html: { class: 'input-wrapper' },
                input_html: { class: "input-blue-border", autocomplete: "email" }%>
  </div>
  <div class="col-md-6">
    <%= f.input :avatar,
                required: false,
                wrapper_html: { class: 'input-wrapper' },
                input_html: { class: "input-blue-border", autocomplete: "avatar" }%>
    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                wrapper_html: { class: 'input-wrapper' },
                input_html: { class: "input-blue-border", autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
                required: true,
                wrapper_html: { class: 'input-wrapper' },
                input_html: { class: "input-blue-border", autocomplete: "new-password" } %>
  </div>

  </div>
  </div>



  <div class="form-actions">
    <%= f.button :submit, "Sign up", class:"button_blue_outline mb-4" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>
