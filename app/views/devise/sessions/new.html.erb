<div class="container form-container mt-5 pt-2 text-center">
  <h2 class="">LOG IN</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs blue-form mt-4">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  wrapper_html: { class: 'input-wrapper' },
                  input_html: { class: "input-blue-border", autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  wrapper_html: { class: 'input-wrapper' },
                  input_html: {  class: "input-blue-border", autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class: "button_blue_outline mb-4" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>
